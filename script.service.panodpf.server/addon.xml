<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.panodpf.server" name="PanoDPFServer" version="1.0.0" provider-name="Remus Koos">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.service" library="panodpf_server.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
